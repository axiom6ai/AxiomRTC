<%= bootstrap_form_for(teacher, local: true) do |form| %>
  <%= render 'share/errors', object: teacher %>
  <% if teacher.new_record? %>
    <%= form.text_field :mobile %>
  <% end %>
  <%= form.text_field :name %>
  <%= form.select :degree, Teacher.degree_map, {inlcude_blank: true} %>
  <%= form.password_field :password %>
  <%= form.password_field :password_confirmation %>
  <%= form.submit t 'commit' %>
<% end %>