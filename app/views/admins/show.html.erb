<div class="container">

  <div class="jumbotron">

    <a class="btn btn-primary btn-lg pull-right" href="<%= edit_admin_path %>">
      <span class="glyphicon glyphicon-cog"></span>
    </a>

    <p>
      <strong><%= t 'name' %></strong>:
      <%= @admin.name %>
    </p>

    <p>
      <strong><%= t 'mobile' %></strong>:
      <%= @admin.mobile %>
    </p>

    <p>
      <strong><%= t 'level' %></strong>:
      <%= Admin.to_level_title @admin.level %>
    </p>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <p class="panel-title pull-left"><%= t 'chat' %></p>
      <%= link_to t('more'),
                  chats_path,
                  class: 'btn btn-primary pull-right' %>
      <div class="clearfix"></div>
    </div>

    <div class="list-group">
      <%= render(@admin.chats[0..9]) || t('no_chats') %>
    </div>
  </div>

</div>

