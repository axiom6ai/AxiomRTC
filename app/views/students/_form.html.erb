<%= bootstrap_form_for(student, local: true) do |form| %>
  <%= render 'share/errors', object: student %>
  <% if student.new_record? %>
    <%= form.text_field :mobile %>
  <% end %>
  <%= form.text_field :name %>
  <%= form.select :grade, Student.grade_map, {inlcude_blank: true} %>
  <%= form.password_field :password %>
  <%= form.password_field :password_confirmation %>
  <%= form.submit t 'commit' %>
<% end %>
