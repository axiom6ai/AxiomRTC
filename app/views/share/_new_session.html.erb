<div class="wrapper">
  <%= form_for(:session, url: path, html: {class: 'form-signin'}) do |f| %>
    <h2 class="form-signin-heading"><%= t('login') %> as <%= session_name %></h2>
    <%= f.text_field :mobile, placeholder: t('mobile'), class: 'form-control', value: '40000000001' %>
    <%= f.password_field :password, placeholder: t('password'), class: 'form-control', value: '12345678' %>
    <%= f.submit :submit, class: 'btn btn-primary btn-lg btn-block' %>
  <% end %>
</div>
